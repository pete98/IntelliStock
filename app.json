{
  "expo": {
    "name": "IntelliStock",
    "slug": "IntelliStock",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Intellistock.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pranav1998.IntelliStock",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to unlock IntelliStock."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.pranav1998.IntelliStock"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "auth0Domain": "dev-hhtarorh33yux8dc.us.auth0.com",
      "auth0ClientId": "hjiU69kiEtPJLXJey7XBzQQcsxQidETv",
      "auth0Audience": "https://adminapi"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow IntelliStock to access your camera to scan barcodes",
          "microphonePermission": "Allow IntelliStock to access your microphone for video recording",
          "recordAudioAndroid": true
        }
      ],
      [
        "react-native-auth0",
        {
          "domain": "dev-hhtarorh33yux8dc.us.auth0.com"
        }
      ]
    ]
  }
}
